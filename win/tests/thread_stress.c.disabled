// This file is a part of AddressSanitizer, an address sanity checker.

#include <windows.h>

#include "common.h"

DWORD WINAPI thread_proc(void *context) {
  volatile char stack_buffer[42];
  for (int i = 0; i < sizeof(stack_buffer); ++i)
    stack_buffer[i] = 42;
  return 0;
}

int main(void) {
  // This test case is based on Chromium's TimeTicks.WinRollover test
  // from base_unittests.
  for (int iter = 0; iter < 4096; ++iter) {
    const int NUM_THREADS = 8;
    HANDLE thr[NUM_THREADS];
    for (int i = 0; i < NUM_THREADS; ++i) {
      thr[i] = CreateThread(NULL, 0, thread_proc, NULL, 0, NULL);
      CHECK(thr[i] > 0);
    }
    for (int i = 0; i < NUM_THREADS; ++i) {
      CHECK(WAIT_OBJECT_0 == WaitForSingleObject(thr[i], INFINITE));
      CloseHandle(thr[i]);
    }
  }
  return 0;
}
